{
    // Editor
    "editor.fontSize": 16,
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace'",
    "editor.fontLigatures": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.suggest.insertMode": "replace",
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.formatOnSave": true,
    "editor.dragAndDrop": true,
    "editor.smoothScrolling": true,
    "editor.inlineSuggest.enabled": true,
    "editor.stickyScroll.enabled": true,
    "editor.quickSuggestionsDelay": 5,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "prettier.tabWidth": 4,
    "editor.codeActionsOnSave": {
        "source.addMissingImports": true
    },
    "workbench.colorTheme": "Bear Theme",
    "explorer.confirmDelete": false,

    // Terminal
    "terminal.integrated.fontFamily": "'Fira Code'",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.gpuAcceleration": "on",
    /* Extension Specific */
    // Code Snap
    "codesnap.containerPadding": "2em",
    "codesnap.backgroundColor": "#111111",
    "codesnap.transparentBackground": true,

    // React Snippets
    "reactSnippets.settings.prettierEnabled": true,

    // Project Manager
    "projectManager.git.baseFolders": ["E:/"],
    "projectManager.sortList": "Recent",

    // NeoVim (init.lua)
    "vscode-neovim.neovimInitVimPaths.win32": "C:/Users/User/AppData/Local/nvim/init.lua",

    // Formatting
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "html.format.indentInnerHtml": true,
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "php.validate.executablePath": "C:/xampp/php/php.exe",
    "C_Cpp.autocompleteAddParentheses": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,

    // GIT
    "git.autofetch": true
}

/* 
   1. NeoVIM
   2. Bear Theme 
   3. Error Lens
   4. ES7 + React/Redux/React-Native snippets
   5. ESLint
   6. Import Cost
   7. Material Icon Theme
   8. Prettier
   9. Project Manager
*/
